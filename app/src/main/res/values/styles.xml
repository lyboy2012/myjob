<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="welcomeBg">
        <item name="android:background">@color/green</item>
    </style>
    <style name="welcomeTitle">

        <item name="android:textColor">#fff</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="login_input_auto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:padding">5dip</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#606060</item>
        <item name="android:background">@drawable/rounded_login_auto</item>
    </style>
    <style name="transitionAnimation" parent="AppTheme">

        <item name="android:activityOpenEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@android:anim/slide_out_right</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@android:anim/slide_out_right</item>

    </style>
    <style name="menu_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/menu_text</item>
    </style>
</resources>
